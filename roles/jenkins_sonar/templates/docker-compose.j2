version: '3'

services:
  jenkins0:
    image: {{ image.jenkins }}
    ports:
      - 8080:8080
      - 9010:9010
    links:
      - socatdockersock
    privileged: true
    volumes:
      - {{ course_path }}/jenkins0:/var/jenkins_home
      - {{ course_path }}/jenkins-backup:/var/jenkins_backup
      - {{ course_path }}/jenkins-workspace:/home/jenkins
      - {{ course_path }}/jenkins-workspace/.jenkins:/home/jenkins/.jenkins

  socatdockersock:
    image: {{ image.socat }}
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
    command: TCP4-LISTEN:2375,fork,reuseaddr UNIX-CONNECT:/var/run/docker.sock

