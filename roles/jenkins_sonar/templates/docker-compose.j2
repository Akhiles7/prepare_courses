  nexus:
    image: {{ image.nexus }}
    volumes:
      - {{ course_path }}/nexus-data:/nexus-data
    ports:
      - 8088:8081
      - 20000:20000
    links:
      - jenkins0

  nginx:
    image: {{ image.nginx }}
    container_name: nginx
    ports:
     - 8000:8000
  #  depends_on:
  #   - artifactory
  #  links:
  #   - artifactory
    volumes:
     - {{ course_path }}/nginx:/var/opt/jfrog/nginx
    environment:
     - ART_BASE_URL=http://artifactory:8081/artifactory
     - SSL=true
    restart: always
    ulimits:
      nproc: 65535
      nofile:
        soft: 32000
        hard: 40000
  
  ldap:
    image: {{ image.ldap }}
    ports:
      - 10389:389
  
  bitbucket:
    image: {{ image.bitbucket }}
    ports:
      - 7999:7999
      - 7990:7990
    volumes:
      - {{ course_path }}/bitbucket:/var/atlassian/application-data/bitbucket
       
  sonar:
    image: {{ image.sonar }}
    ports:
      - 9000:9000
      - 9092:9092
    volumes:
      - {{ course_path }}/sonarqube/conf:/opt/sonarqube/conf
      - {{ course_path }}/sonarqube/data:/opt/sonarqube/data
      - {{ course_path }}/sonarqube/extensions:/opt/sonarqube/extensions
      - {{ course_path }}/sonarqube/plugins:/opt/sonarqube/lib/bundled-plugins
